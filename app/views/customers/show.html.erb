<%= render 'headbar' %>
<div class='ls-box'>
<h3 class="ls-title-3"><%= @customer.name %></h3>
<br>
<p><b> <%= t(:address) %> : </b> <%= @customer.address %> <p>
  <% if @customer.cpf.blank?%>
    <p><b> <%= t(:company_name) %> :</b> <%= @customer.company_name %> <p>
    <p><b>CNPJ:</b> <%= @customer.cnpj %></p>
  <% else %>
    <p><b>CPF:</b> <%= @customer.cpf %></p>
    <p><b> <%= t(:birth_date) %> :</b> <%= l @customer.birth_date %> <p>
  <% end %>
<p><b>Email:</b> <%= @customer.email %> <p>
<p><b> <%= t(:phone) %> :</b> <%= @customer.phone%><%= @customer.contact %><p>
</div>
<p><%= link_to t(:edit_customer), edit_customer_path , class:'ls-btn-primary'%>
<%= link_to t(:back), root_path , class:'ls-btn'%>
<%= link_to t(:new_sale), new_customer_order_path(@customer), class:'ls-btn-primary'%></p>
