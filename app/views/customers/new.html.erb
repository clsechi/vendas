<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :cpf %>
  <%= f.text_field :cpf %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :birth_date %>
  <%= f.date_field :birth_date %>

  <%= f.label :cnpj %>
  <%= f.text_field :cnpj %>

  <%= f.label :company_name %>
  <%= f.text_field :company_name %>

  <%= f.label :contact %>
  <%= f.text_field :contact %>

  <%= f.submit 'Enviar' %>
<% end %>
