<table class='ls-table'>
  <thead>
    <tr>
      <th>Nome do Cliente</th>
      <th>CPF/CNPJ</th>
      <th>Telefone</th>
      <th colspan="2">Pessoa</th>
    <tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer_path(customer) %></td>

        <% if customer.cpf.blank? %>
          <td><%= customer.cnpj %></td>
        <% else %>
          <td><%= customer.cpf %></td>
        <% end %>

        <% if customer.phone.blank? %>
          <td><%= customer.contact %></td>
        <% else %>
          <td><%= customer.phone %></td>
        <% end %>

        <% if customer.legal_person? %>
          <td> Pessoa FÃ­sica </td>
        <% else %>
          <td> Pessoa Juridica </td>
        <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to 'Novo Cliente', new_customer_path, class:'ls-btn-primary' %>
<%= link_to 'Voltar', root_path , class:'ls-btn'%></p>
