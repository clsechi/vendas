<%= render 'headbar' %>
<table class='ls-table'>
  <thead>
    <tr>
      <th>ID do Pedido</th>
      <th colspan="2">Nome do Vendedor</th>
    <tr>
  </thead>
  <tbody>
  <% @orders.each do |order|%>
    <tr>
      <td><%= link_to order.id, customer_order_path(order, order.customer_id) %></td>
      <td> <%= order.seller.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<p><%= link_to 'Voltar', root_path , class:'ls-btn'%></p>
