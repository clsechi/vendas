<%= render 'headbar' %> 
<h1>Novo pedido</h1>
<br>
<h3>Selecione o plano</h3>
<br>
<ol class="ls-breadcrumb">
  <li>Categoria: <%= session[:category_name] %></li>
  <li>Produto: <%= session[:product_name] %></li>
</ol>
<br>
<% @plans.each do |plan|  %>
  <div class="ls-list">
    <header class="ls-list-header">
      <div class="ls-list-title col-md-9">
        <%= link_to plan.name, customer_order_plan_path(plan_id: plan.id, plan_name: plan.name ), method: :post %>
        <small><%= plan.description %> </small>
      </div>
    </header>
  </div>
<% end %>
