<h1>Novo pedido</h1>
<h2>Selecione o plano</h2>
<p>Categoria: <%= session[:category_name] %></p>
<p>Produto: <%= session[:product_name] %></p>

<% @plans.each do |plan|  %>

  <%= link_to plan.name, customer_order_plan_path(plan_id: plan.id, plan_name: plan.name ), method: :post %>

  <p><%= plan.description  %> </p>

<% end %>
