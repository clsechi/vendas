<h1>Novo pedido</h1>
<h2>Selecione o produto</h2>
<p>Categoria: <%= session[:category_name] %></p>

<% @products.each do |prod| %>

  <%= link_to prod.name, customer_order_product_path(product_id: prod.id, product_name: prod.name), method: :post %>

<% end %>

<p> <%= link_to 'Cancelar venda',[@customer, @order],
        method: :delete,
        data: { confirm: 'Tem certeza que deseja cancelar?'},
        class:'ls-btn-primary-danger' %> </p>
