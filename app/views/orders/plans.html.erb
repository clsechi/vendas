<h1>Novo pedido</h1>
<h2>Selecione o plano</h2>

<% @plans.each do |plan| %>

  <%= form_with url: customer_order_plan_path do |f| %>

    <%= plan.name  %>

    <%= f.hidden_field :plan_id, value: plan.id %>
    <br>
    <%= f.label :periodicite, 'Preco'  %>
    <%= f.collection_select :periodicite, plan.periodicites, :period , :name, {} %>

    <%= f.submit 'Concluir' %>

  <% end %>

<% end %>
