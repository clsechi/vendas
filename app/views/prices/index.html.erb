<%= render 'shared/headbar' %>
<h1> <%= t(:new_order) %> </h1>
<br>
<h3> <%= t(:select_periodicity) %> </h3>
<br>
<ol class="ls-breadcrumb">
  <li> <%= t(:category) %>: <%= session[:category_name] %></li>
  <li> <%= t(:product) %>: <%= session[:product_name] %></li>
  <li> <%= t(:plan) %>: <%= session[:plan_name] %></li>
</ol>
<br>
<% @prices.each do |price| %>
  <div class="ls-list">
    <header class="ls-list-header">
      <div class="ls-list-title col-md-9">
        <%= link_to price.name,
             customer_order_price_path([@customer, @order],
                                       id:price.per.period,
                                       value: price.value,
                                       periodicity_id: price.per.period,
                                       price_name: price.name), method: :patch  %>
      </div>
    </header>
  </div>
<% end %>

<p> <%= link_to t(:cancel_sale),[@customer, @order],
        method: :delete,
        data: { confirm: t(:are_you_sure)},
        class:'ls-btn-primary-danger' %> </p>
