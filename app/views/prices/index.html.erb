<h1>Novo pedido</h1>
<h2>Selecione a periodicidade</h2>
<p>Categoria: <%= session[:category_name] %></p>
<p>Produto: <%= session[:product_name] %></p>
<p>Plano: <%= session[:plan_name] %></p>

<% @prices.each do |price| %>
 <%= link_to price.name,
      customer_order_price_path([@customer, @order],
                                id:price.per.period,
                                value: price.value,
                                periodicity_id: price.per.period,
                                price_name: price.name), method: :patch  %>
<% end %>

<p> <%= link_to 'Cancelar venda',[@customer, @order],
        method: :delete,
        data: { confirm: 'Tem certeza que deseja cancelar?'},
        class:'ls-btn-primary-danger' %> </p>
